<%= content_for :html_title, @post.seo_title %>
<%= content_for :meta_description, @post.meta_description %>

<div class="page-title">
  <h2>OUR MUSINGS</h2>
</div>
<div class="container blog-content">
  <div class="row">
    <div class="col-sm-8">
      <h1><%= @post.title %></h1>
      <p class="meta"><%= Date.parse(@post.published).strftime("%d %b %Y") %> | <%= @post.author.first_name %> <%= @post.author.last_name %></p>

      <%= @post.body.html_safe %>

    </div>
  <% if !@related_posts.nil? %>
  <br class="visible-xs"/>
    <div class="col-sm-3 offset-sm-1 related">
      <h3>Related Posts</h3>
      <br />
      <% @related_posts.first(3).each do |post| %>
        <%= link_to buttercms_post_path(post.slug) do %>
          <div class="card">
            <div class="card-img-top" style="background-image: url(<%= post.featured_image %>)"></div>
            <div class="card-body">
              <h4 class="card-title"><%= post.title %></h4>
              <p class="meta"><small> <%= Date.parse(post.published).strftime("%e %b %Y") %> | <%= post.author.first_name %> <%= post.author.last_name %></small></p>
              <!-- <a class="btn idea-btn pink">View Blog Post</a> -->
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
  </div>
</div>
