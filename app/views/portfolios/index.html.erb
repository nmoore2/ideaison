<p id="notice"><%= notice %></p>

<h1>Case Studies
  <%= link_to 'New Case Study', new_portfolio_path, class: 'btn btn-sm btn-success float-right' %>
</h1>

<div class="table-responsive">
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Title</th>
      <th>
        Placement
        </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.order(:placement).each do |portfolio| %>
      <tr>
        <td><%= link_to portfolio.title, edit_portfolio_path(portfolio) %></td>
        <td>
          <%= portfolio.placement %>
          </td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio), class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Delete', portfolio, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
