<p id="notice"><%= notice %></p>

<h1>Testimonials
  <%= link_to 'New Testimonial', new_testimonial_path,  class: 'btn btn-sm btn-success float-right' %>

</h1>

<div class="table-responsive">
  <table class="table table-striped responsive">
    <thead>
      <tr>
        <th>Author</th>
        <th>Placement</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @testimonials.order(:placement).each do |testimonial| %>
        <tr>
          <td><%= link_to testimonial.author, edit_testimonial_path(testimonial) %></td>
          <td><%= testimonial.placement %></td>
          <td><%= link_to 'Edit', edit_testimonial_path(testimonial), class: 'btn btn-sm btn-info' %></td>
          <td><%= link_to 'Delete', testimonial, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
