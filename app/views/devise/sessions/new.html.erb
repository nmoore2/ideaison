<div class="col-sm-6">

<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Sign in</h3>
    <br />
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <%- if devise_mapping.recoverable? %>
      <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
    <% end -%>
    <br />
    <br />
      <%= f.submit 'Sign in', :class => 'btn btn-primary' %>
      <br />
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
            <%= f.check_box :remember_me, style: 'display: inline-block; width: 25px;vertical-align: middle;' %>
            <label style="display: inline-block;" for="user_remember_me">Remember Me</label>
        </div>
      <% end -%>
  <% end %>
</div>
</div>
