<p id="notice"><%= notice %></p>

<h1>Team
  <%= link_to 'New Team Member', new_team_path, class: 'btn btn-sm btn-success float-right' %>
</h1>

<div class="table-responsive">
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Title</th>
      <th>
        Placement
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.order(:placement).each do |team| %>
      <tr>
        <td><%= link_to team.name, edit_team_path(team) %></td>
        <td><%= team.placement %></td>
        <td><%= link_to 'Edit', edit_team_path(team), class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Delete', team, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
